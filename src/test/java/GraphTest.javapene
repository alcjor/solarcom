package test.java;

import graph.Dijkstra;
import graph.Graph;
import graph.SimpleLink;
import graph.SimpleVertex;
import org.junit.Test;

public class GraphTest {

    @Test
    public void dijkstraTest() {

        SimpleNode v1 = new SimpleNode("A");
        SimpleNode v2 = new SimpleVertex("B");
        SimpleNode v3 = new SimpleVertex("C");
        SimpleNode v4 = new SimpleVertex("D");
        SimpleNode v5 = new SimpleVertex("E");
        SimpleNode v6 = new SimpleVertex("F");

        Graph g = new Graph();

        g.addVertex(v1);
        g.addVertex(v2);
        g.addVertex(v3);
        g.addVertex(v4);
        g.addVertex(v5);
        g.addVertex(v6);

        g.addEdge(new SimpleLink(v1, v2, 1.0));
        g.addEdge(new SimpleLink(v1, v3, 2.0));
        g.addEdge(new SimpleLink(v1, v4, 8.0));
        g.addEdge(new SimpleLink(v2, v5, 3.0));
        g.addEdge(new SimpleLink(v3, v5, 3.0));
        g.addEdge(new SimpleLink(v3, v4, 9.0));
        g.addEdge(new SimpleLink(v3, v6, 8.0));
        g.addEdge(new SimpleLink(v4, v6, 20.0));
        g.addEdge(new SimpleLink(v5, v6, 4.0));

        Dijkstra dijkstra = new Dijkstra();
        double dist = dijkstra.shortestPath(g, v1, v6);

        assert dist == 8.0;
    }
}
